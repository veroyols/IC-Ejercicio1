@model Application.DTO.ClientDTO
@{
    ViewData["Title"] = "Editar cliente";
}
<form action="/Client/Update" method="post" id="formClient">
<input type="hidden" name="IsEditMode" value="true" />

    <div class="d-flex justify-content-between align-items-center">
        <h1 class="display-4">@ViewData["Title"]</h1>
        <a class="btn btn-secondary" asp-controller="Client" asp-action="Clients" data-bs-toggle="tooltip" title="Cancelar y volver al inicio">
            <i class="bi bi-arrow-left-circle"></i> Cancelar
        </a>
    </div>

    <div class="form-group">
        <label asp-for="CUIT"></label>
        <input asp-for="CUIT" id="inputCuit" class="form-control" readonly />
        <button type="button" id="buttonGetRazonSocial" class="btn btn-secondary mt-2">Validar CUIT</button>
        <span asp-validation-for="CUIT" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RazonSocial"></label>
        <input asp-for="RazonSocial" id="inputRazonSocial" class="form-control" readonly />
        <span asp-validation-for="RazonSocial" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Telefono"></label>
        <input asp-for="Telefono" id="inputTelefono" class="form-control" />
        <span asp-validation-for="Telefono" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Direccion"></label>
        <input asp-for="Direccion" id="inputDireccion" class="form-control" />
        <span asp-validation-for="Direccion" class="text-danger"></span>
    </div>

    <div class="form-group form-check">
        <input asp-for="Activo" id="inputActive" class="form-check-input" />
        <label asp-for="Activo" class="form-check-label"></label>
    </div>

    <button id="buttonUpdateFormSubmit" type="submit" class="btn btn-primary">
        Actualizar
    </button>

</form>

@section Scripts {
    <script type="module" src="~/js/listener/onClick.js"></script>
}
