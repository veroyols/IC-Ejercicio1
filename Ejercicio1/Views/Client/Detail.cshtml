@model Application.DTO.ClientDTO
@{
    ViewData["Title"] = "Detalle del Cliente";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="display-4">@ViewData["Title"]</h1>
    <div>
        <a class="btn btn-warning" asp-controller="Client" asp-action="Update" asp-route-cuit="@Model.CUIT" data-bs-toggle="tooltip" title="Editar cliente">
            <i class="bi bi-pencil-square"></i> 
        </a>
        <a class="btn btn-danger" asp-controller="Client" asp-action="Delete" asp-route-cuit="@Model.CUIT" data-bs-toggle="tooltip" title="Eliminar cliente">
            <i class="bi bi-trash"></i>
        </a>
        <a class="btn btn-secondary" asp-controller="Client" asp-action="Clients" data-bs-toggle="tooltip" title="Volver a la lista">
            <i class="bi bi-arrow-left-circle"></i> Volver
        </a>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-header bg-secondary text-white">
        Información del Cliente
    </div>
    <div class="card-body">
        <p><strong>CUIT:</strong> @Model.CUIT</p>
        <p><strong>Razón Social:</strong> @Model.RazonSocial</p>
        <p><strong>Teléfono:</strong> @Model.Telefono</p>
        <p><strong>Dirección:</strong> @Model.Direccion</p>
        <p>
            <strong>Estado:</strong>
            <span class="badge @(Model.Activo ? "bg-success text-white" : "bg-danger text-white")">
                @(Model.Activo ? "Activo" : "Inactivo")
            </span>
        </p>
    </div>
</div>
